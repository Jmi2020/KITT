# ==============================================================================
# KITTY Images Service Configuration
# ==============================================================================
# Stable Diffusion image generation service with queued jobs and MinIO storage

# Engine choice: diffusers | invokeai | a1111
IMAGE_ENGINE=diffusers

# InvokeAI configuration (if IMAGE_ENGINE=invokeai)
INVOKE_HOST=127.0.0.1
INVOKE_PORT=9091
INVOKE_OUTDIR=/tmp/invoke_out

# Automatic1111 configuration (if IMAGE_ENGINE=a1111)
A1111_BASE_URL=http://127.0.0.1:7860

# S3/MinIO configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=kitty-artifacts
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_PREFIX=images/

# Redis queue configuration
REDIS_URL=redis://127.0.0.1:6379/0

# Models configuration
# Uses the same models directory as llama.cpp models
MODELS_YAML=/Users/Shared/Coding/models/models.yaml
HF_HOME=/Users/Shared/Coding/.cache/huggingface

# Apple Silicon tuning
# Set to 0.0 for better stability on MPS
PYTORCH_MPS_HIGH_WATERMARK_RATIO=0.0

# Service configuration
SERVICE_HOST=127.0.0.1
SERVICE_PORT=8089
